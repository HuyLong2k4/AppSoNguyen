<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText nhập số -->
    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số"
        android:inputType="number"
        android:text="100"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="80dp"/>

    <!-- RadioGroup chọn loại số -->
    <RadioGroup
        android:id="@+id/radioGroupNumberType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Hàng 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <RadioButton
                android:id="@+id/radioEven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số lẻ"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radioPrime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số nguyên tố"/>

            <RadioButton
                android:id="@+id/radioPerfect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số hoàn hảo"/>
        </LinearLayout>

        <!-- Hàng 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioOdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số chẵn"/>

            <RadioButton
                android:id="@+id/radioSquare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số chính phương"/>

            <RadioButton
                android:id="@+id/radioFibonacci"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số Fibonacci"/>
        </LinearLayout>
    </RadioGroup>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- ListView hiển thị danh sách số -->
    <ListView
        android:id="@+id/listViewNumbers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#EEEEEE"
        android:dividerHeight="1dp"/>

    <!-- TextView hiển thị khi không có số -->
    <TextView
        android:id="@+id/textViewEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Không có số nào thỏa mãn"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#666666"
        android:visibility="gone"/>

</LinearLayout>